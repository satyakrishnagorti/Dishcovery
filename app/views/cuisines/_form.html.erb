<%= simple_form_for @cuisine, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :cuisine_name %>
  <%= error_span(@cuisine[:cuisine_name]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cuisines_path, :class => 'btn btn-default' %>
<% end %>
