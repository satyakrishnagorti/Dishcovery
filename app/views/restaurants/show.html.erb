<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:rest_id) %>:</strong></dt>
  <dd><%= @restaurant.rest_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @restaurant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @restaurant.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loc_id) %>:</strong></dt>
  <dd><%= @restaurant.loc_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zone_name) %>:</strong></dt>
  <dd><%= @restaurant.zone_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zone_id) %>:</strong></dt>
  <dd><%= @restaurant.zone_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_name) %>:</strong></dt>
  <dd><%= @restaurant.city_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @restaurant.city_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cuisines) %>:</strong></dt>
  <dd><%= @restaurant.cuisines %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter_handle) %>:</strong></dt>
  <dd><%= @restaurant.twitter_handle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_for_two) %>:</strong></dt>
  <dd><%= @restaurant.cost_for_two %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rating) %>:</strong></dt>
  <dd><%= @restaurant.rating %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
