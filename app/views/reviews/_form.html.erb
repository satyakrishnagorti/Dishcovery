<%= simple_form_for @review, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :rest_id %>
  <%= error_span(@review[:rest_id]) %>
  <%= f.input :user %>
  <%= error_span(@review[:user]) %>
  <%= f.input :review_text %>
  <%= error_span(@review[:review_text]) %>
  <%= f.input :rating %>
  <%= error_span(@review[:rating]) %>
  <%= f.input :sentiment %>
  <%= error_span(@review[:sentiment]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reviews_path, :class => 'btn btn-default' %>
<% end %>
