<%= form_tag('results')  do  %>

    <center><h2>Cuisines</h2></center>
    <div id="cols" class="well" >
      <% @cuisines.each do |a|%>
         <font size="4"> <%= radio_button_tag a,a %> <%= a%></font> </br>
      <% end %>
    </div>

    <center><h2>Locations in Bangalore</h2></center>
    <div id="cols" class="well">
      <%= Location.find_each do |a|%>
          <font size="4" ><%= check_box_tag a.loc_name, a.loc_name %> <%= a.loc_name%></font> </br>
      <% end%>
    </div>

    <%= submit_tag 'Search', class: "btn btn-primary btn-lg btn-block" %>

<% end %>